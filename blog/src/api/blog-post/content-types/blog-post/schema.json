{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "Blog Post",
    "description": "Blog posts with rich content and dynamic zones"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "maxLength": 500
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "content.text-block",
        "content.image",
        "content.video",
        "content.image-slider",
        "content.cta-banner",
        "content.quote"
      ]
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "blog_posts"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "blog_posts"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "blog_posts"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "seo.meta-tags"
    },
    "readingTime": {
      "type": "integer",
      "default": 5
    },
    "commentsEnabled": {
      "type": "boolean",
      "default": true
    },
    "contactFormEnabled": {
      "type": "boolean",
      "default": false
    },
    "viewCount": {
      "type": "integer",
      "default": 0
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}

