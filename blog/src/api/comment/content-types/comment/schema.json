{
  "kind": "collectionType",
  "collectionName": "comments",
  "info": {
    "singularName": "comment",
    "pluralName": "comments",
    "displayName": "Comment",
    "description": "Blog post comments"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "content": {
      "type": "text",
      "required": true
    },
    "authorName": {
      "type": "string",
      "required": true
    },
    "authorEmail": {
      "type": "email",
      "required": true
    },
    "blog_post": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::blog-post.blog-post"
    },
    "parentComment": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::comment.comment"
    },
    "replies": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment.comment",
      "mappedBy": "parentComment"
    },
    "approved": {
      "type": "boolean",
      "default": false
    },
    "ipAddress": {
      "type": "string"
    }
  }
}

