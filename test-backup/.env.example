# Server Configuration
NODE_ENV=development
PORT=5000

# Client URL
CLIENT_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/coinsforcollege

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@collegetokens.com

# SMS Configuration (Twilio)
TWILIO_SID=your-twilio-account-sid
TWILIO_TOKEN=your-twilio-auth-token
TWILIO_PHONE=your-twilio-phone-number

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# JWT Secrets
JWT_SECRET_ACCESS=your-super-secret-access-token-key
JWT_SECRET_REFRESH=your-super-secret-refresh-token-key

# Token expiry
JWT_ACCESS_EXPIRE=1h      # access token expires in 1 hour
JWT_REFRESH_EXPIRE=15d      # refresh token expires in 15 days

# Cookie expiry in days
JWT_COOKIE_EXPIRE_ACCESS=0.0417   # 1 hour â‰ˆ 0.0417 day
JWT_COOKIE_EXPIRE_REFRESH=15       # 15 days
